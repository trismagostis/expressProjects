<article>
    {{#if id}}
        <h2>{{title}}</h2>
        <h2>{{content}} posta o id  {{id}}</h2>
    {{else}} 
        <h1>Blog</h1>

        {{#each posts}}

            {{#if isPublic}}
                <div class="post">
                    <h2>{{title}}</h2>
                    <p>{{content}}</p>
                </div>
            {{/if}}
        {{/each}}
    {{/if}}
</article>